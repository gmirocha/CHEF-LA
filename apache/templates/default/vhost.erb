#vhost template file
#
<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>

<VirtualHost *:<%= @port %> >
	DocumentRoot "<%= @document_root %>"
	ServerName <%= @domain %>

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory <%= @document_root %> >
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>
